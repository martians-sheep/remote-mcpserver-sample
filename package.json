{
  "name": "remote-mcpserver-sample",
  "version": "1.0.0",
  "description": "Sample implementation of Remote MCP Server with comparison to Local MCP Server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev:local": "tsx src/local/server.ts",
    "dev:remote": "tsx src/remote/express/server.ts",
    "start:local": "node dist/local/server.js",
    "start:remote": "node dist/remote/express/server.js",
    "deploy:cf": "wrangler deploy",
    "cf:dev": "wrangler dev",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "remote-mcp",
    "cloudflare-workers"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "wrangler": "^3.87.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
